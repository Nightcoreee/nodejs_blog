<script>
    document.addEventListener('DOMContentLoaded', function() {
        var courseId;
        var restoreForm = document.forms['restore-course-form'];
        var restoreButtons = $('.btn-restore');
        var deleteButton = document.getElementById('btn-delete-course');
        var deleteForm = document.forms['delete-course-form'];

        var checkboxAll = $('#checkAll');
        var courseItemCheckboxes = $('input[name="courseIds[]"]');
        var checkAllSubmitButton = $('.check-all-sub-btn');
        var containerForm = document.forms['container-form'];

        $('#delete-course-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');
        });

        deleteButton.onclick = function() {
            deleteForm.action = '/courses/' + courseId + '/force?_method=DELETE';
            deleteForm.submit();
        }

        // H√†nh ƒë·ªông x·ª≠ l√Ω n√∫t kh√¥i ph·ª•c
        restoreButtons.click(function(e) {
            e.preventDefault();
            var courseId = $(this).data('id');
            restoreForm.action = '/courses/' + courseId + '/restore?_method=PATCH';
            restoreForm.submit(); 
        });

        checkboxAll.on('change', function() {
            var isChecked = $(this).is(':checked');
            courseItemCheckboxes.prop('checked', isChecked);
            renderCheckAllSubmitButton();
        });

        courseItemCheckboxes.change(function() {
            var isChecked = courseItemCheckboxes.length === $('input[name="courseIds[]"]:checked').length;
            checkboxAll.prop('checked', isChecked);
            renderCheckAllSubmitButton();
        });


        checkAllSubmitButton.on('submit', function (e) {
          var isSubmitable = !$(this).hasClass('disabled');
          if (!isSubmitable) {
            e.preventDefault();
          }
        });


        function renderCheckAllSubmitButton() {
            var CountChecked = $('input[name="courseIds[]"]:checked').length;
            if (CountChecked > 0) {
                checkAllSubmitButton.removeClass('disabled');
            } else {
                checkAllSubmitButton.addClass('disabled');
            }             
        } 
});
</script>