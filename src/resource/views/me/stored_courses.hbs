<form name="delete-course-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var courseId;
        var deleteButton = document.getElementById('btn-delete-course');
        var deleteForm = document.forms['delete-course-form'];
        var checkboxAll = $('#checkAll');
        var courseItemCheckboxes = $('input[name="courseIds[]"]');
        var checkAllSubmitButton = $('.check-all-sub-btn');
        
        var containerForm = $('form[name="container-form"]');

        $('#delete-course-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');
    });

        deleteButton.onclick = function() {
            deleteForm.action = '/courses/' + courseId + '?_method=DELETE';
            deleteForm.submit();
        }

        // Handle "Select All" checkbox functionality
        checkboxAll.on('change', function() {
            var isChecked = $(this).is(':checked');
            courseItemCheckboxes.prop('checked', isChecked);
            renderCheckAllSubmitButton();
        });

        courseItemCheckboxes.change(function() {
            var isChecked = courseItemCheckboxes.length === $('input[name="courseIds[]"]:checked').length;
            checkboxAll.prop('checked', isChecked);
            renderCheckAllSubmitButton();
        });


        containerForm.on('submit', function (e) {
          var isSubmitable = !checkAllSubmitButton.is(':disabled');
          if (!isSubmitable) {
            e.preventDefault();
          }
        });


        function renderCheckAllSubmitButton() {
            var CountChecked = $('input[name="courseIds[]"]:checked').length;
            if (CountChecked > 0) {
                checkAllSubmitButton.attr('disabled', false);
            } else {
                checkAllSubmitButton.attr('disabled', true);
            }             
        } 
});
</script>